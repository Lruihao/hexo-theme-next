//表格
.post-body>table{
  border-radius: 5px;
  border: none;
  box-shadow: 0 0 5px #888;
}
.post-body>table td,th {
  border-right: 1px solid #ccc;
}
.post-body>table td:last-child,th:last-child {
  border-right: none;
}
.post-body>table>tbody tr:last-child td {
  border-bottom: none;
}
.post-body>table>tbody tr:last-child td:last-child{
  border-radius: 0 0 5px 0;
}
.post-body>table>tbody tr:last-child td:first-child{
  border-radius: 0 0 0 5px;
}

.menu .menu-item .badge {
  background-color: #bbb;
}

//选项卡
.post-body .tabs ul.nav-tabs {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.post-body .tabs .tab-content {
  background: rgba(255,255,255,0.2);
  border-radius: 0 0 5px 5px;
}
.post-body .tabs ul.nav-tabs li.tab {
  background: #fff;
  border: 1px solid #ddd;
  border-top: 2px solid #63bb63;
  border-radius: 5px 5px 0 0;
  margin: 0;
}
.post-body .tabs ul.nav-tabs li.tab:hover,
.post-body .tabs ul.nav-tabs li.tab.active {
  border-top: 2px solid #fc6423;
  border-left: 1px solid #ddd;
  border-right: 1px solid #ddd;
  border-bottom: none;
  background: rgba(255,255,255,0.2);
  padding-bottom: 0;
  margin-bottom: 0;
}

//微信公众号
.weixin-box {
  position: absolute;
  bottom: 45px;
  left: 10px;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0,0,0,.35);
}
.weixin-menu {
  position: relative;
  height: 24px;
  width: 24px;
  cursor: url(/images/pointer.cur),auto;
  background: url(https://ziyuan.lruihao.cn/images/wechat.svg);
  background-size: 24px 24px
}
.weixin-hover {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 0;
  width: 0;
  border-radius: 3px;
  box-shadow: 0 0 10px 0 rgba(0,0,0,.35);
  background: url(https://ziyuan.lruihao.cn/images/wechat-qcode.jpg);
  background-color: #fff;
  background-repeat: no-repeat;
  background-size: 150px 150px;
  transition: all .35s ease-in-out;
  z-index: 1024;
  opacity: 0
}
.weixin-menu:hover .weixin-hover {
  bottom: 24px;
  left: 24px;
  height: 170px;
  width: 150px;
  opacity: 1
}
.weixin-description {
  opacity: 0;
  position: absolute;
  bottom: 3%;
  left: 5%;
  right: 5%;
  font-size: 12px;
  transition: all .35s cubic-bezier(1,0,0,1)
}
.weixin-menu:hover .weixin-description {
  opacity: 1
}

